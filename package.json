{
  "name": "nodejs-todo-api",
  "version": "1.0.0",
  "description": "API de tarefas simples com persistência em arquivo e rotas isoladas para testes unitários.",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "NEW_RELIC_ENABLED=false nodemon src/app.js",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:cov": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings=0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "newrelic": "^11.15.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.0",
    "eslint": "^9.39.0",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/db/file.js",
      "!src/app.js",
      "!src/server.js",
      "!src/newrelic.js",
      "!src/public/app.js"
    ],
    "testMatch": [
      "**/test/**/*.spec.(js|mjs)",
      "**/__tests__/**/*.test.(js|mjs)"
    ],
    "transform": {}
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Claudio Martin Bianco",
  "license": "MIT"
}
